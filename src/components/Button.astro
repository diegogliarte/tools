---
const {
    id,
    label,
    onClick,
    variant = "primary",
    size = "sm",
} = Astro.props as {
    id?: string;
    label: string;
    onClick?: string;
    variant?: "primary" | "secondary";
    size?: "sm" | "md" | "lg";
};

const variants = {
    primary: "bg-violet-600 hover:bg-violet-500 text-white",
    secondary: "bg-neutral-700 hover:bg-neutral-600 text-neutral-100",
};

const sizes = {
    sm: "px-3 py-1 text-sm",
    md: "px-4 py-2 text-base",
    lg: "px-5 py-3 text-lg",
};
---

<button
        id={id}
        class={`rounded-md transition-colors cursor-pointer ${variants[variant]} ${sizes[size]}`}
        onClick={onClick}
>
    {label}
</button>
